{
  "name": "usmnt-scraper",
  "version": "1.0.0",
  "main": "build/src/index.js",
  "license": "MIT",
  "dependencies": {
    "puppeteer": "^13.2.0"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "^2.1.1",
    "@types/express": "^4.17.13",
    "@types/node": "^20.1.0",
    "concurrently": "^7.0.0",
    "gts": "^3.1.0",
    "nodemon": "^2.0.15",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "^4.0.3"
  },
  "scripts": {
    "deploy": "gcloud functions deploy getPlayersUSMNT --trigger-http --runtime nodejs16 --region us-central1",
    "test": "gcloud functions describe getPlayersUSMNT",
    "start": "functions-framework --source=build/src/ --target=getPlayersUSMNT",
    "watch": "concurrently \"tsc -w\" \"nodemon --watch ./build/ --exec yarn start\"",
    "local": "node build/src/index.js",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "yarn run compile",
    "pretest": "yarn run compile",
    "posttest": "yarn run lint"
  }
}
